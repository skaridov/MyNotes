<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_item_relative_layout"
    android:background="@color/colorRecyclerBackgorund">

    <EditText
        android:id="@+id/recycler_item_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack" />

    <ImageView
        android:id="@+id/recycler_item_image_have_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_have_reminder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/ic_have_reminder" />
</RelativeLayout>